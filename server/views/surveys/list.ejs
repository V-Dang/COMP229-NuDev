<%- include ('../partials/header.ejs') %>

<%- include ('../partials/main_nav.ejs') %>
  


<!-- Main Content -->
<main class="container">
    <!--add boostrap table code-->
  
    <div class="row">
      <div class="col-md-offset-3 col-md-8">
        <h1><%=title %></h1>
         <a href="/surveys/add" class="btn btn-primary" role="button">  
       <i class="fa fa-plus-circle"></i> Add a Survey</a>
       <br />
        <table class="table table-bordered table-striped table-hover" >
          <!--HEader row-->
          <tr>
            <th class="text-center col-2">Survey Title</th>
            <th class="text-center col-2">Subject</th>     
            
              <th class="text-center col-1"></th>
              <th class="text-center col-1"></th>
              
          </tr>
  
          <!--Repeatable Templet row-->
          <% for (let count=0; count<SurveyList.length; count++){%>
            <tr>
              <td class="text-centre "><%=SurveyList[count].survey_name %></td>
              <td class="text-centre "><%=SurveyList[count].survey_subject %></td>
              <!-- <td class="text-centre "><%=SurveyList[count].survey_date %></td> -->
             
                
                <td class="text-center col-1">
                  <a href="/surveys/edit/<%= SurveyList[count]._id %>" class="btn btn-primary btn-sm">
                  <i class="fas fa-pencil-alt"></i> Update</a>
              </td>
              <td class="text-center col-1">
                  <a href="/surveys/delete/<%= SurveyList[count]._id %>" class="btn btn-danger btn-sm">
                  <i class="fas fa-trash-alt"></i> Delete</a>
              </td>
              
            </tr>
          <%}%>
        </table>
      </div>
    </div>
  </main>
  
  
  
<%- include ('../partials/bottom_nav.ejs') %>  

<%- include ('../partials/footer.ejs') %>
  





